<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.rightkarma.hibernate.model.EmployeeMnp" table = "EMPLOYEE_MNP">
        <meta attribute = "class-description">
            This class contains the employee mnp mappings.
        </meta>

        <id name = "mnpId" column = "MNP_ID" type = "int">
            <generator class="increment"/>
        </id>
        <one-to-one name = "employee" class="com.rightkarma.hibernate.model.Employee" constrained="true"/>
        <property name = "dob" column = "DOB" type = "java.util.Date"/>
    </class>
</hibernate-mapping>
